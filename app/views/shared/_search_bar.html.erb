  <%= text_field_tag :query, "", class: 'search search-box', placeholder: 'Search Jobs', value: (@params[:query] if @params ) %>
  <span style="color: #B9B9B9"> around </span>
  <%= text_field_tag :place, "", class: 'place search-box', placeholder: 'place name', value: default_place %>
