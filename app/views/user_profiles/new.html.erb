<% provide(:title, 'Jobly | Sign up') %>  
<h1>User SignUp</h1>
<div id="tabs" >
    <ul>
        <li><a  id="job_seeker" %>Job Seeker</a></li>
        <li> <a  id="company" %>Company</a></li>   
    </ul>
</div>
<div id="job_seeker_signup">
  
    <%= form_for(@user_profile) do |f| %>
    	<%= f.fields_for :user do |af| %>
    	    <%= render 'shared/user_signup', user: af %>
        <%end%>
        <br>
    	<%= f.label "Name" %>
    	<br>
        <%= f.text_field :firstname, placeholder: 'First name' %>
        <%= f.text_field :lastname, placeholder: 'Last name' %>
        <br><br>  
       
        <%= f.label :full_address %>
        <br>
        <%= f.text_field :full_address , placeholder: 'Street | City | Zip code | Country' %>
        <br>
        <%= f.submit 'Submit' %>
    <% end %>
</div>
<div id="company_signup">
    <%= form_for @company_profile, :html => { :multipart => true } do |f| %>
        <h2>Register new company</h2>
        <%= render 'company_Profiles/form', :f => f %>
        <%= f.submit "Register "%> 
    <% end %>
</div>

<script type="text/javascript">
    $(function() {
       $('#company_signup').hide();        
        $('#company').click(function(){
            $('#job_seeker_signup').hide();
             $('#company_signup').fadeIn();
        });

        $('#job_seeker').click(function(){
            $('#job_seeker_signup').fadeIn();
            $('#company_signup').hide();
        });
      });
</script>