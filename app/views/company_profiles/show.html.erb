<div class="banner">
	<% if @company_profile.banner? %>
		<%= image_tag @company_profile.banner(:banner) %>
	<% else %>
		<span class="banner-text"><%=@company_profile.name[0,15]%></span>
	<%end%>

</div>
<div class="banner-cover"><%= link_to 'Change Banner', edit_banner_path(id: @company_profile.id), remote: true, class: 'buttonify banner-link' %></div>
	

<div class="span4">
	<%= image_tag @company_profile.logo(:profile_pic), class: "decorate" %> <br>
	<%= link_to "Edit", edit_company_profile_path(@company_profile), class: 'btn btn-primary'%>	
	
	<div class="company_vacancies">
		<h4>Vacancy Announcements  <%= link_to "New", new_vacancy_path, class: 'btn btn-primary'%></h4>
		<%= render 'vacancies/vacancies', :company=> @company_profile %>
	</div>

</div> 
<div class="span8">
	<h3><%= @company_profile.name %> </h3>	
	<p>Address:			<%= @company_profile.street %> <%= @company_profile.city %><%= @company_profile.zip %> <%= @company_profile.country %> </p>
	<p>Website:			<%= @company_profile.website %> </p>
	<p>Contacts:		<%= @company_profile.company_type %> </p>
	<p>Description:		<%= raw @company_profile.description %> </p>
</div>