<h1>Sign In</h1>
<!-- FIXME: use rails path method instead of hardcoded url and also remove line for it from route.rb -->
<%= form_for(:session, url: '/session/create', method: 'post') do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
  </br>
      <%= f.submit "Sign in" %>
    <% end %>

