
<div class="language_skill language_skill-<%= language_skill.id%>">
	<div class="language_table">
		<table style="width:500px;">
			<tr>
				
				<th><%=language_skill.name %></th>
				<th><%=language_skill.skill_type%></th>
				<td>
		<%language_skill.level.times do |num|%>
			<i class="level level-green"></i>
		<% end %>
		<%(5-language_skill.level).times do |num|%>
			<i class="level level-grey"></i>
		<% end %>
	</td>
			</tr>

		</table>
	</div>


<div class="hidden-options">
	<% if can? :update , language_skill %>
	<%= link_to edit_language_skill_path(language_skill), remote: true do %>
		<i class="icon-edit"></i>
	<%end%>
	<%end%>
	<% if can? :destroy , language_skill %>
	<%= link_to language_skill, :method => :delete,remote: true, :confirm => "You sure?"  do%>
	<i class=" icon-trash"></i>
	<% end %>
	<% end %>
</div>
</div>