<%= form_for @language_skill , remote: true do |f|%>
	<table class="cv_tables form_table">
		<tr>
			<td><span>Name</span></td>
			<td><%= f.text_field :name %></td>
		</tr>
		
		<tr>
			<td>Skill Type</td>
			<td><%= f.select(:skill_type, [["spoken", "spoken"], ["written", "written"]]) %></td>
		</tr>
		<tr>
			<td>Level</td>
			<td>
				<%= f.select(:level, [['Basic', 1], ['Fair', 2], ['Average', 3],['Good', 4],['Excelent', 5]]) %>
			</td>
		</tr>
		<tr><td colspan="2"></td></tr>
	</table>
	<%=f.submit 'Save', class: 'btn btn-primary right'%>
	<% end %>