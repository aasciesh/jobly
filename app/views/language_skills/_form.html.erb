<%= form_for @language_skill , remote: true do |f|%>
	<table class="cv_tables form_table">
		<tr>
			<td><span>Name</span></td>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<ul><span>Level</span>
			<li><%= f.radio_button :level, "0" %>Fail</li>
			<li><%= f.radio_button :level, "1" %>Basic</li>
			<li><%= f.radio_button :level, "2" %>Fair</li>
			<li><%= f.radio_button :level, "3" %>Average</li>
			<li><%= f.radio_button :level, "4" %>Good</li>
			<li><%= f.radio_button :level, "5" %>Excellent</li>
		</ul>
		</tr>
		<tr>
			<ul><span>Skill Type</span>
			<li><%= f.radio_button :skill_type, "spoken"%>Spoken</li>
			<li><%= f.radio_button :skill_type, "written"%>Written</li>
		</ul>
		</tr>
		
		<tr><td colspan="2"><%=f.submit 'Save', class: "button button-primary"%></td></tr>
	</table>
	<% end %>